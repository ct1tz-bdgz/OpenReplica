{
  "name": "openreplica",
  "version": "1.0.0",
  "description": "A beautiful replica of OpenHands with enhanced UI and full feature parity",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "python -m openreplica.cli serve --reload",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "python -m build",
    "start": "python -m openreplica.cli serve",
    "install:all": "pip install -r requirements.txt && cd frontend && npm install",
    "setup": "npm run install:all",
    "test": "python -m pytest tests/",
    "lint": "black openreplica/ && isort openreplica/ && cd frontend && npm run lint",
    "clean": "rm -rf dist/ build/ *.egg-info/ frontend/dist/ frontend/node_modules/"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "llm",
    "openai",
    "anthropic",
    "code-generation",
    "docker",
    "python",
    "react",
    "typescript"
  ],
  "author": "OpenReplica Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/OpenReplica.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/OpenReplica/issues"
  },
  "homepage": "https://github.com/your-username/OpenReplica#readme"
}
